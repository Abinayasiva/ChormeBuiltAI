{
  "manifest_version": 3,
  "name": "ContextFlow - AI Research Assistant",
  "version": "1.0.0",
  "description": "AI-powered research assistant that connects information across tabs using Chrome's built-in AI",
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "trial_tokens": [
    "ApEKlvW1qVpHDvVqhWfB7l4UbfTlTZFCbQnShMfD94791kybzVS+kpGtLqrJCYFGLiMtJUzvZpaDyF4Ue/zK1ggAAAB7eyJvcmlnaW4iOiJjaHJvbWUtZXh0ZW5zaW9uOi8vcGlkZWplZGFtZWhibGpvbmFsZWZpaG9tbmJlYmJtbm0iLCJmZWF0dXJlIjoiQUlQcm9tcHRBUElNdWx0aW1vZGFsSW5wdXQiLCJleHBpcnkiOjE3NzQzMTA0MDB9"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open ContextFlow"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}